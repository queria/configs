[user]
    name = Pavel Sedl√°k
    email = psedlak@redhat.com

[color]
    diff = auto
    branch = auto
    status = auto
    grep = auto

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dfc = diff --cached
    lom = log --no-merges
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
    log-here = log master..
    log-master = log ..master
    ll = log --oneline
    ls = log --name-status
    lsvim = "!_(){ vim -p $(git log --name-status -1 | sed -nr 's/^[A|M]\\W(.*)/\\1/p'); }; _"
    up = pull --ff-only up master
    amend = commit --amend
    ame = commit --amend
    reb = rebase -i master
    con = rebase --continue
    rev = review
    revy = review --yes
    pum = "!_() { o_br=$(git symbolic-ref -q HEAD); o_br=${o_br##refs/heads/}; git checkout master && git pull --ff-only && git merged-cleanup && [[ ! -z \"$o_br\" ]] && git checkout $o_br; }; _"
    pur = "!_() { o_br=$(git symbolic-ref -q HEAD); o_br=${o_br##refs/heads/}; git checkout master && git pull --ff-only && git merged-cleanup && [[ ! -z \"$o_br\" ]] && git checkout $o_br && git rebase -i master; }; _"
    zzz = "!_() { git branch -m $1 zzz___/$1; }; _"
    wake = "!_() { git branch -m $1 ${1/zzz___\\//}; }; _"

[core]
    autocrlf = input
    attributesfile = ~/.gitattributes
    excludesfile = ~/.gitexcludes
    pager = less -F -+X
    #pager = 
    #gitproxy = nc localhost 9418
#/all/src/ngitcached/git-local-proxy
    whitespace = trailing-space

[push]
	default = upstream
[gui]
	historybrowser = gitk
	diffcontext = 10
	editor = gvim
[merge]
	tool = xxdiff
[diff]
	tool = vimdiff
    guitool = kompare
[difftool]
	prompt = false
[verify "branch"]
	base = master
	target = verify
[verify]
	switchback = false

[url "git://anongit.kde.org/"]
       insteadOf = kde:
[url "ssh://git@git.kde.org/"]
       pushInsteadOf = kde:
[url "git@git.kde.org:"]
	pushInsteadOf = kde:
